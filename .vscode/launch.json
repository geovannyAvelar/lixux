{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Kernel",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/kernel.elf",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb-multiarch",
      "miDebuggerServerAddress": "localhost:1234",
      "stopAtEntry": true,
      "args": [],
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}